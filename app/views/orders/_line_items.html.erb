<div class="panel panel-default items">
<table class="table table-bordered">
  <tbody>
  <tr>
  <th colspan="2">Product</th>
  <th>Description</th>
  <th>Quantity</th>
  <th>Cost</th>
</tr>
<% for item in @line_items do %>
    <tr>
        <td><%= image_tag item.product.image.tiny %></td>
        <td><%= item.product.name %></p></td>
        <td><%= item.product.description %></td>
        <td><%= item.quantity %></td>
        <td>$<%= '%.2f' % (item.total_price_cents/100) %></td>
    </tr>
<% end %>
    <tr>
        <td colspan='4'>Subtotal:</td>
        <td>$<%= '%.2f' % (@order.total_cents/100) %></td>
    </tr>
    </tbody>
</table>
</div>
